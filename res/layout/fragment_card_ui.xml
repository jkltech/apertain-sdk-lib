<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/card_ui_base_relative">
    
    <RelativeLayout 
        android:id="@+id/card_ui_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        
        <ImageView 
            android:id="@+id/card_ui_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/card_ui_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_ui_image_layout">
        
        <TextView 
            android:id="@+id/card_ui_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        
    </RelativeLayout>
    
    <RelativeLayout 
        android:id="@+id/card_ui_desc_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_ui_title_layout">
        
        <TextView 
            android:id="@+id/card_ui_title_desc_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"/>
        
    </RelativeLayout>

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:gravity="right" >

    <LinearLayout
        android:id="@+id/lb_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dip" >

	    <RelativeLayout
	        android:id="@+id/lb_table"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_margin="5dip"
	        android:layout_gravity="center_vertical" >

	        <TextView
	            android:id="@+id/lb_rank"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:paddingLeft="5dip"
	            android:paddingRight="10dip"
	            android:text="@string/apertain_fb_message"
	            android:layout_centerVertical="true"
	            android:layout_alignParentLeft="true"
	            android:textColor="@android:color/primary_text_light" />
	        <TextView
	            android:id="@+id/lb_name"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:paddingRight="10dip"
	            android:text="@string/apertain_fb_message"
	            android:layout_centerVertical="true"
	            android:layout_toRightOf="@+id/lb_rank"
	            android:textColor="@android:color/primary_text_light" />
	        <TextView
	            android:id="@+id/lb_area"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:paddingRight="10dip"
	            android:text="@string/apertain_fb_message"
	            android:layout_centerVertical="true"
	            android:layout_toLeftOf="@+id/lb_score"
	            android:textColor="@android:color/primary_text_light" />
	        <TextView
	            android:id="@+id/lb_score"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="center"
	            android:paddingRight="10dip"
	            android:text="@string/apertain_fb_message"
	            android:layout_centerVertical="true"
	            android:layout_alignParentRight="true"
	            android:textColor="@android:color/primary_text_light" />

		</RelativeLayout>
	</LinearLayout>
    
</LinearLayout>